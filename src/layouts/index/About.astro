<style>
  /* ABOUT */
  .separator {
    margin-left: auto;
    margin-right: auto;
    padding: 0px 20px;
    width: 70vw;
    border-bottom: thin solid var(--darkblue);
  }

  .h2-title {
    font-size: 2rem;
    align-self: center;
  }
  .about {
    display: flex;
    justify-items: center;
    justify-content: space-evenly;
    flex-wrap: wrap;
  }

  .portrait {
    align-self: center;
    max-height: 70vh;
    height: auto;
    max-width: 70%;
    box-shadow: -15px -15px var(--enfacis);
    border: solid thin var(--darkblue);
  }

  .block-about {
    padding: 5vw 5vh;
    width: 40vw;
    display: flex;
    flex-direction: column;
    text-align: center;
    justify-content: center;
    justify-items: center;
  }

  .block-about p {
    text-align: justify;
  }

  .block-about h4 {
    margin: 0;
    color: var(--enfacis);
  }

  .table-about {
    margin-right: auto;
    margin-left: auto;
  }

  .tableFocus {
    font-weight: bold;
    border-right: thin solid var(--enfacis);
  }

  table {
    text-align: justify;
    margin: 15px 0;
  }

  table tr td {
    padding: 5px;
  }

  .block-about-full {
    padding: 25px 0;
    display: block;
    background-color: var(--darkblue);
    color: var(--white);
    width: 100vw;
    text-align: center;
  }

  .block-about-full ul {
    padding: 0 5vh;
    list-style: none;
    display: flex;
    justify-content: space-evenly;
    flex-wrap: wrap;
  }

  .block-about-full ul li {
    margin: 10px 0;
    /* modificar este valor para corregir los conocimientos */
    flex-basis: 14%;
  }

  .block-about-full ul li img {
    width: 15vw;
    max-width: 100px;
    height: auto;
  }

  /* ABOUT media query */
  @media (max-width: 1023px) {
    .about {
      display: flex;
      flex-direction: column;
    }

    .block-about {
      padding: 35px 10vw 15px 10vw;
      width: 80vw;
      display: flex;
      flex-direction: column;
      text-align: center;
      justify-content: center;
      justify-items: center;
    }

    .block-about-full ul li {
      margin: 10px 0;
      flex-basis: 33%;
    }
  }
</style>
